{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fat Clip",
  "version": "0.1.0",
  "identifier": "com.administrator.fat-clip",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fat Clip",
        "width": 520,
        "height": 600,
        "minWidth": 400,
        "minHeight": 400,
        "center": true,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "transparent": true,
        "shadow": true,
        "windowEffects": {
          "effects": ["mica"],
          "state": "active"
        }
      },
      {
        "label": "input-panel",
        "title": "Input Panel",
        "width": 400,
        "height": 280,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
